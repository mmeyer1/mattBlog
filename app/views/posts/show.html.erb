<p id="notice"><%= notice %></p>

<p>
  <strong>title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= @post.comments.each do |comment| %>
  <p>
  <strong>Author: </strong>
  <%= comment.author %>
  </p>

  <p>
  <strong> Comment: </strong>
  <%= comment.body %>
  </p>
<% end %>

<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
